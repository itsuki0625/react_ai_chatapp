{
  "family": "frontend-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::354918390375:role/stg-ecs-task-exec-role",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "354918390375.dkr.ecr.ap-northeast-1.amazonaws.com/prod-frontend:latest",
      "portMappings": [
        { "containerPort": 3000, "protocol": "tcp" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/frontend-prod",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
      ],
      "secrets": [
        {
          "name": "AUTH_SECRET",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:prod/api/env-bf58bb25-HBWJUD:AUTH_SECRET::"
        },
        {
          "name": "NEXTAUTH_URL",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:prod/api/env-bf58bb25-HBWJUD:NEXTAUTH_URL::"
        },
        {
          "name": "NEXTAUTH_COOKIE_DOMAIN",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:prod/api/env-bf58bb25-HBWJUD:NEXTAUTH_COOKIE_DOMAIN::"
        }
      ]
    }
  ]
} 