{
  "family": "backend-stg",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::354918390375:role/stg-ecs-task-exec-role",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "354918390375.dkr.ecr.ap-northeast-1.amazonaws.com/stg-backend:latest",
      "portMappings": [
        { "containerPort": 5050, "protocol": "tcp" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/backend-stg",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        { "name": "PORT", "value": "5050" }
      ],
      "secrets": [
        { "name": "DATABASE_URL", "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:stg/api/env-e809cb1f-LCqnyE:DATABASE_URL::" },
        { "name": "OPENAI_API_KEY", "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:stg/api/env-e809cb1f-LCqnyE:OPENAI_API_KEY::" },
        { "name": "SECRET_KEY", "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:stg/api/env-e809cb1f-LCqnyE:SECRET_KEY::" },
        { "name": "STRIPE_SECRET_KEY", "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:stg/api/env-e809cb1f-LCqnyE:STRIPE_SECRET_KEY::" },
        { "name": "STRIPE_PUBLISHABLE_KEY", "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:stg/api/env-e809cb1f-LCqnyE:STRIPE_PUBLISHABLE_KEY::" },
        { "name": "STRIPE_WEBHOOK_SECRET", "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:stg/api/env-e809cb1f-LCqnyE:STRIPE_WEBHOOK_SECRET::" },
        { "name": "NEXTAUTH_URL", "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:stg/api/env-e809cb1f-LCqnyE:NEXTAUTH_URL::" },
        { "name": "AUTH_SECRET", "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:stg/api/env-e809cb1f-LCqnyE:AUTH_SECRET::" }
      ]
    }
  ]
} 