{
  "family": "backend-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::354918390375:role/prod-ecs-task-exec-role",
  "taskRoleArn": "arn:aws:iam::354918390375:role/prod-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "354918390375.dkr.ecr.ap-northeast-1.amazonaws.com/prod-backend:latest",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/backend-prod",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        { "name": "PORT", "value": "5050" },
        { "name": "AWS_ACCOUNT_ID", "value": "354918390375" }
      ],
      "secrets": [
        { "name": "BACKEND_ENV_SECRETS", "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:354918390375:secret:prod/api/env-8eb92c38" }
      ],
      "portMappings": [
        {
          "containerPort": 5050,
          "hostPort": 5050,
          "protocol": "tcp"
        }
      ],
      "essential": true
    }
  ]
} 